@using Microsoft.AspNetCore.Mvc.TagHelpers
@using JewelryWarehouse.Controllers
@inject Microsoft.Extensions.Localization.IStringLocalizer<HomeController> localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - JewelryWarehouse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/JewelryWarehouse.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">JewelryWarehouse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@localizer["HomeMain"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">@localizer["Product"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">@localizer["Shop"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Warehouse" asp-action="Index">@localizer["Warehouse"]</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a class="nav-link text-dark me-3" asp-controller="Cart" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1h1.755l.619 1.863 1.431 7.154a.5.5 0 0 0 .491.383h8.708a.5.5 0 0 0 .49-.383l1.431-7.154.619-1.863H16a.5.5 0 0 1 .5.5v.5a1 1 0 0 1-1 1H2.25a1 1 0 0 1-.992-.876L.404 2.344l-.295-1.181A.5.5 0 0 0 0 1.5zm2.307 1h11.386l-1.289 5H4.596l-.289-1.723a.5.5 0 0 0-.496-.425h-1.5zM5.618 12a1.5 1.5 0 1 0 2.764 0h3.236a1.5 1.5 0 1 0 2.763 0H5.618z"/>
                         </svg>
                        Cart (@ViewBag.CartItemCount)
                    </a>
                    <form class="d-flex" asp-controller="Home" asp-action="SetLanguage" method="post">
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path"/>
                        <select name="culture" class="form-select" onchange="this.form.submit();">
                            <option value="en" selected="@((string)ViewData["CurrentCulture"] == "en" ? "selected" : null)">English</option>
                            <option value="ru" selected="@((string)ViewData["CurrentCulture"] == "ru" ? "selected" : null)">Русский</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - JewelryWarehouse - <a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
    </div>
    <div class="text-center">
        <p class="logo-container">
            <img src="~/img/Logo/LogoSite.png?v=@DateTime.Now.Ticks" alt="Site Logo" class="site-logo" />
        </p>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>