@using Microsoft.AspNetCore.Mvc.TagHelpers
@using JewelryWarehouse.Controllers
@inject Microsoft.Extensions.Localization.IStringLocalizer<HomeController> localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - JewelryWarehouse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/JewelryWarehouse.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">JewelryWarehouse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@localizer["HomeMain"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">@localizer["Product"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">@localizer["Shop"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Warehouse" asp-action="Index">@localizer["Warehouse"]</a>
                    </li>
                </ul>
                <form class="d-flex" asp-controller="Home" asp-action="SetLanguage" method="post">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path"/>
                    <select name="culture" class="form-select" onchange="this.form.submit();">
                        <option value="en" selected="@((string)ViewData["CurrentCulture"] == "en" ? "selected" : null)">English</option>
                        <option value="ru" selected="@((string)ViewData["CurrentCulture"] == "ru" ? "selected" : null)">Русский</option>
                    </select>
                </form>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - JewelryWarehouse - <a asp-area="" asp-controller="Home" asp-action="Privacy">@localizer["Privacy"]</a>
    </div>
    <div class="text-center">
        <p class="logo-container">
            <img src="~/img/Logo/LogoSite.png?v=@DateTime.Now.Ticks" alt="Site Logo" class="site-logo" />
        </p>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>