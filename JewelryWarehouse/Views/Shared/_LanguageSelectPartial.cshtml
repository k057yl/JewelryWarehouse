@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = new List<SelectListItem>
    {
        new SelectListItem { Value = "en", Text = "English", Selected = requestCulture.RequestCulture.Culture.Name == "en" },
        new SelectListItem { Value = "ru", Text = "Русский", Selected = requestCulture.RequestCulture.Culture.Name == "ru" }
    };
}

<form id="selectLanguage" asp-controller="Home" asp-action="SetLanguage" method="post" class="form-inline">
    <select name="culture" asp-items="cultureItems" class="form-control" onchange="this.form.submit();"></select>
</form>