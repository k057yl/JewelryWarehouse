@model List<JewelryWarehouse.Models.Entity.Product>

@{
    ViewData["Title"] = "Products";
}


<h2>Products</h2>

<p>
    <a class="btn btn-primary" asp-action="Index" asp-route-sortOrder="price_asc">Sort by Price (Ascending)</a>
    <a class="btn btn-primary" asp-action="Index" asp-route-sortOrder="price_desc">Sort by Price (Descending)</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Categories</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>
                @foreach (var category in product.Categories)
                {
                    <span>@category.Name</span><br />
                }
            </td>
            <td>
                <a class="btn btn-success" asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@product.Id">
                    <img src="~/img/Icons/add-icon.png" style="width: 24px; height: 24px;"/>
                </a>
            </td>
            <td>
                <a class="btn btn-success" asp-action="RemoveFromCart" asp-controller="Cart" asp-route-productId="@product.Id">
                    <img src="~/img/Icons/remove-icon.png" style="width: 24px; height: 24px;"/>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>